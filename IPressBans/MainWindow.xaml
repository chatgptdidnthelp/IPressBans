<Window x:Class="IPressBans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPressBans"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- First Row -->
        <Label Grid.Row="0" Grid.Column="0" Content="Tenacity" VerticalAlignment="Center"/>
        <Border x:Name="Border1" Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <TextBox Name="TextBlock1" VerticalAlignment="Center"/>
        </Border>

        <!-- Second Row -->
        <Label Grid.Row="1" Grid.Column="0" Content="Strength" VerticalAlignment="Center"/>
        <Border x:Name="Border2" Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <TextBox Name="TextBlock2" VerticalAlignment="Center"/>
        </Border>

        <!-- Third Row -->
        <Label Grid.Row="2" Grid.Column="0" Content="Bravery" VerticalAlignment="Center"/>
        <Border x:Name="Border3" Grid.Row="2" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <TextBox Name="TextBlock3" VerticalAlignment="Center"/>
        </Border>
        
        
        <Button Content="Set Text Sources" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="SetTextSourcesButton_Click"/>
    </Grid>


</Window>
